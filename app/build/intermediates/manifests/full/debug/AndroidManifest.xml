<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mindhive.similarity"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name="com.mindhive.similarity.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.mindhive.similarity.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mindhive.similarity.GetSimilarityActivity"
            android:screenOrientation="portrait" />
        <!-- android:label="@string/app_name" android:screenOrientation="landscape"/> -->
        <activity
            android:name="com.mindhive.similarity.ModeStdActivity"
            android:screenOrientation="portrait" />
        <!-- android:label="@string/app_name" android:screenOrientation="landscape"/> -->
        <activity android:name="com.mindhive.similarity.ReferImgActivity" />
        <activity android:name="com.mindhive.similarity.ConfirmImgActivity" />
        <activity
            android:name="com.mindhive.similarity.LoginActivity"
            android:label="@string/title_activity_login" />
    </application>

</manifest>